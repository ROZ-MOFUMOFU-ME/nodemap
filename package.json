{
    "name": "nodemap",
    "version": "0.3.1",
    "description": "cryptocurrency geolocation map with React frontend",
    "main": "src/server/server.js",
    "type": "module",
    "scripts": {
        "start": "node src/server/server.js",
        "dev:server": "NODE_ENV=development nodemon src/server/server.js",
        "dev:client": "vite",
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "build": "vite build",
        "preview": "vite preview",
        "lint": "eslint .",
        "test": "NODE_ENV=test mocha --experimental-modules --node-option=experimental-specifier-resolution=node test/*.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ROZ-MOFUMOFU-ME/nodemap.git"
    },
    "keywords": [
        "cryptocurrency",
        "geoip",
        "geolocation",
        "node",
        "map",
        "node.js",
        "javascript",
        "bitcoin",
        "react",
        "vite"
    ],
    "author": "ROZ",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ROZ-MOFUMOFU-ME/nodemap/issues"
    },
    "homepage": "https://github.com/ROZ-MOFUMOFU-ME/nodemap",
    "dependencies": {
        "axios": "^1.9.0",
        "bitcoin-core": "^5.0.0",
        "express": "^5.1.0",
        "node-cache": "^5.1.2",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-leaflet": "^5.0.0"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.4.1",
        "chai": "^4.5.0",
        "chai-http": "^4.4.0",
        "concurrently": "^9.1.2",
        "mocha": "^11.4.0",
        "nodemon": "^3.1.10",
        "vite": "^6.3.5"
    },
    "engines": {
        "node": ">=16"
    }
}
